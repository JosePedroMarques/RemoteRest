<configuration>
  <system.runtime.remoting>
    <application name="Server">
      <service>
        <wellknown
          mode="Singleton"
          type="OrderManager, OrderManager"
          objectUri="InventoryManager" />
      </service>
      <channels>
        <channel ref="tcp" port="50000">
          <serverProviders>
            <formatter ref="binary" typeFilterLevel="Full" />
          </serverProviders>
        </channel>
      </channels>
    </application>
  </system.runtime.remoting>
</configuration>
